<p id="notice"><%= notice %></p>

<h1>Listing Discipuladores</h1>

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Cpf</th>
      <th>Fone residencial</th>
      <th>Fone celular</th>
      <th>Endereco</th>
      <th>Bairro</th>
      <th>Cidade</th>
      <th>Estado</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @discipuladores.each do |discipulador| %>
      <tr>
        <td><%= discipulador.nome %></td>
        <td><%= discipulador.cpf %></td>
        <td><%= discipulador.fone_residencial %></td>
        <td><%= discipulador.fone_celular %></td>
        <td><%= discipulador.endereco %></td>
        <td><%= discipulador.bairro %></td>
        <td><%= discipulador.cidade %></td>
        <td><%= discipulador.estado %></td>
        <td><%= link_to 'Show', discipulador %></td>
        <td><%= link_to 'Edit', edit_discipulador_path(discipulador) %></td>
        <td><%= link_to 'Destroy', discipulador, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

